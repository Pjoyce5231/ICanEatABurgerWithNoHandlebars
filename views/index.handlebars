<h1>BURGERS</h1>

<h2>Ready to Eat!</h2>

<ul>
  {{#each burgers}}
  <li>
    {{#unless devoured}} 
    {{> burgers/burger-block devoured=true}} 
    {{/unless}}
    <p>{{burgers_name}}</p>
  </li>
  {{/each}}
</ul>

<h2>Devoured!</h2>

<ul>
  <p>{{burgers_name}}</p>
    {{#each burgers}} 
    {{#if devoured}} 
      {{> burgers/burger-block devoured=false}} 
    {{/if}} 
    {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Type:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="devoured">devoured</label>
    <br>
    <input type="radio" name="devoured" value="1" checked> Ready to Eat
    <br>
    <input type="radio" name="devoured" value="0"> Devoured
  </div>

  <button type="submit">Add Burger</button>
</form>